# Email Configuration for Password Reset
# Copy these settings to your .env file or set them in your hosting environment

# Gmail SMTP Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True

# Your Gmail credentials
# IMPORTANT: Use an App Password, not your regular password
# Go to: https://myaccount.google.com/apppasswords
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here

# From email address
DEFAULT_FROM_EMAIL=Interns Management System <noreply@taskstracker.com>

# Frontend URL for reset links
FRONTEND_URL=http://localhost:5174
